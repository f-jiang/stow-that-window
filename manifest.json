{
  "manifest_version": 2,
  "name": "Stow that Window",
  "description": "Save inactive Chrome windows and reduce memory consumption",
  "version": "1.0.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "24": "icons/icon24.png", 
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["bower_components/jquery/dist/jquery.min.js", "background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "background",
    "storage"
  ]
}
